generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
  blog      Blog[]
}

model Blog {
  id        String  @id @default(uuid())
  title     String
  content   String
  published Boolean @default(false)
  authorId  String
  user      User    @relation(fields: [authorId], references: [id])
}
